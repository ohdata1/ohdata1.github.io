{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "How do tax rates effect incomes?",
    "subtitle": "2015 data. Sources: Penn World Tables, International Centre for Tax and Development",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ohdata1/ohdata1.github.io/main/tax_gcap.csv",
    "format": {"type": "csv"}
  },
  "height": 350,
  "width": 375,
  "background": "#DFDEDE",
  "mark": {"type": "point"},
  "encoding": {
    "x": {
      "field": "total",
      "type": "quantitative",
      "title": "Taxes as a % of GDP",
      "axis": {"grid": false}
    },
    "y": {
      "field": "gdpcap",
      "type": "quantitative",
      "title": "GDP per capita ($ 2017 PPP)",
      "axis": {"grid": false}
    },
    "color": {
      "field": "perc_dir",
      "scale": {"scheme": "yelloworangered"},
      "type": "quantitative",
      "title": "% Direct taxes"
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "gdpcap", "type": "quantitative", "title": "GDP per capita"},
      {
        "field": "total",
        "type": "quantitative",
        "title": "% direct taxes"
      },
      {
        "field": "perc_dir",
        "type": "quantitative",
        "title": "Direct taxes as % of taxes"
      }
    ]
  },
  "config": {}
}
