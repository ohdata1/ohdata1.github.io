{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
 
    "title": {
    "text": "Size of UK government over time",
    "subtitle": "Government spending as a % of GDP.   Source: ONS",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

    "width":310,
    "height":300,


    "data": {
      "name": "mydata",
      "url": "https://raw.githubusercontent.com/ohdata1/ohdata1.github.io/main/Gov_spend.csv",
       "format": {"type": "csv"}
    },


    "mark":{
      "type": "line"
    },

"transform": [
  {"filter": "datum.year>minYear"},
      {"filter": "datum.year<maxYear"}


],

    "params": [    
      {"name":"minYear", "value":1960,
         "bind":{
           "input": "range",
           "min": 1960, 
           "max": 2020, 
           "step": 1,
           "name": "Start year:"}
      },

      {"name":"maxYear", "value":2020,
         "bind":{
           "input": "range",
           "min": 1960, 
           "max": 2020, 
           "step": 1,
           "name": "End year:"}
      }
    ],



    "encoding": {
      
      "x": {
        "field": "date",
        "type": "temporal",
        "title":null
        },
  
      "y": {
        "field": "value",                
        "type": "quantitative",
        "title":null
        }
    
  }
}
